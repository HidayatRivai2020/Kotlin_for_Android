<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".services.ServicesActivity">

    <Button
        android:id="@+id/btnService1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classic Service Start"
        app:layout_constraintBottom_toTopOf="@+id/btnService2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnService2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Intent Service"
        app:layout_constraintBottom_toTopOf="@+id/btnService3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnService1"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnService3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classic Service Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnService2"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>